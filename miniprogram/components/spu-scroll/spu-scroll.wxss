.container {
    padding: 42rpx 0 34rpx 28rpx;
    background-color: #fff;
}

.title-image {
    width: 694rpx;
    height: 90rpx;
    margin: 0 auto;
    display: inline-block;
}

.scroll-view {
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.spu-container {
    transition: all 200ms ease-in-out;
    margin-right: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.spu-image {
    width: 160rpx;
    height: 160rpx;
}

.price {
    color: #157658 !important;
} 

.price-unit {
    font-size: 24rpx !important;
