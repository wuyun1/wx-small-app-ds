<view class="container">
    <l-grid l-class="inner-container">
        <block wx:key="{{index}}" wx:for="{{grid}}">
            <l-grid-item key="{{item.id}}" slot="{{item.id}}" >
                <view hover-class="small-hover" hover-stay-time="300" class="grid-item">
                    <image class="img" src="{{item.img}}" />
                    <text class="text">{{item.title}}</text>
                </view>
            </l-grid-item>
        </block>
    </l-grid>
</view>